<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.SVGPath?>

<VBox spacing="0" alignment="CENTER" 
      style="-fx-background-color: -fx-bg-base;"
      stylesheets="@../styles/global.css"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.securetransfer.controller.ui.LoginController">
    
    <StackPane VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER" maxWidth="450" spacing="40">
            <!-- Header Section -->
            <VBox alignment="CENTER" spacing="16">
                <HBox alignment="CENTER" spacing="16">
                    <SVGPath styleClass="navbar-logo" content="M12 2L2 7l10 5 10-5-10-5z" scaleX="2" scaleY="2"/>
                    <Text styleClass="heading-m" text="SecureTransfer"/>
                </HBox>
                <Text styleClass="text-sub" text="Simple, Private, Peer-to-Peer"/>
            </VBox>
            
            <!-- Login Form Card -->
            <VBox styleClass="card-container" spacing="32">
                <VBox alignment="CENTER" spacing="8">
                    <Text styleClass="heading-m" text="Welcome Back"/>
                    <Text styleClass="text-sub" text="Sign in to your account"/>
                </VBox>
                
                <VBox spacing="24">
                    <VBox spacing="10">
                        <Label text="Username" styleClass="field-label"/>
                        <TextField fx:id="usernameField" 
                                  promptText="Enter your username"
                                  styleClass="text-field"/>
                        <Label fx:id="usernameErrorLabel" styleClass="error-label" managed="false" visible="false"/>
                    </VBox>
                    
                    <VBox spacing="10">
                        <Label text="Password" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField" 
                                      promptText="Enter your password"
                                      styleClass="password-field"/>
                        <Label fx:id="passwordErrorLabel" styleClass="error-label" managed="false" visible="false"/>
                    </VBox>
                </VBox>
                
                <VBox spacing="16">
                    <Label fx:id="errorLabel" styleClass="error-label" managed="false" visible="false"/>
                    <Label fx:id="successLabel" styleClass="success-label" managed="false" visible="false"/>
                    
                    <Button fx:id="loginButton" 
                            text="Sign In" 
                            styleClass="btn-primary" 
                            maxWidth="Infinity"
                            onAction="#handleLogin"/>
                </VBox>
                
                <HBox alignment="CENTER" spacing="8">
                    <Text text="New here?" styleClass="text-sub"/>
                    <Button fx:id="registerButton" text="Create Account" onAction="#handleRegister" styleClass="btn-secondary"/>
                </HBox>
            </VBox>
            
            <!-- Footer -->
            <Text styleClass="text-sub" text="Made by DokoData team" opacity="0.4"/>
        </VBox>
    </StackPane>
</VBox>