<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.geometry.Insets?>

<VBox spacing="0" alignment="CENTER" 
      style="-fx-background-color: -fx-bg-base;"
      stylesheets="@../styles/global.css"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.securetransfer.controller.ui.RegistrationController">
    
    <StackPane VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER" maxWidth="450" spacing="40">
            <!-- Header -->
            <VBox alignment="CENTER" spacing="16">
                <HBox alignment="CENTER" spacing="16">
                    <SVGPath styleClass="navbar-logo" content="M12 2L2 7l10 5 10-5-10-5z" scaleX="2" scaleY="2"/>
                    <Text styleClass="heading-m" text="SecureTransfer"/>
                </HBox>
                <Text styleClass="text-sub" text="Create your private transfer account"/>
            </VBox>
            
            <!-- Registration Form Card -->
            <VBox styleClass="card-container" spacing="32">
                <VBox alignment="CENTER" spacing="8">
                    <Text styleClass="heading-m" text="Join Us"/>
                    <Text styleClass="text-sub" text="Setup your secure identity"/>
                </VBox>
                
                <VBox spacing="20">
                    <VBox spacing="8">
                        <Label text="Username" styleClass="field-label"/>
                        <TextField fx:id="usernameField" promptText="Choose a username" styleClass="text-field"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Password" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField" promptText="Minimum 8 characters" styleClass="password-field"/>
                        <Label fx:id="passwordStrengthLabel" styleClass="caption-text" managed="false" visible="false"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Confirm Password" styleClass="field-label"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Repeat your password" styleClass="password-field"/>
                        <Label fx:id="matchIndicator" styleClass="caption-text" managed="false" visible="false"/>
                    </VBox>
                </VBox>
                
                <VBox spacing="16">
                    <Label fx:id="errorLabel" styleClass="error-label" managed="false" visible="false"/>
                    <Label fx:id="successLabel" styleClass="success-label" managed="false" visible="false"/>
                    
                    <Button fx:id="registerButton" 
                            text="Create Account" 
                            styleClass="btn-primary" 
                            maxWidth="Infinity"
                            onAction="#handleRegister"/>
                </VBox>
                
                <HBox alignment="CENTER" spacing="8">
                    <Text text="Already have an account?" styleClass="text-sub"/>
                    <Button text="Sign In" onAction="#handleBack" styleClass="btn-secondary"/>
                </HBox>
            </VBox>
            
            <!-- Footer -->
            <Text styleClass="text-sub" text="Secure, Local, End-to-End" opacity="0.4"/>
        </VBox>
    </StackPane>
</VBox>